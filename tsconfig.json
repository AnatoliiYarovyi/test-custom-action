{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2021",
		"lib": ["es2019"],
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
